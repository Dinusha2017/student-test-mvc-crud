@model IEnumerable<MvcCrud.Student>

@{
    ViewBag.Title = "Student List";
}

<script src="~/Scripts/App/Student.js" type="text/javascript"></script>

<h2>Student List</h2>

@Html.ActionLink(" ", "Create", null, new { @class = "btn btn-primary fa fa-plus" })

<table class="table">
    <tr>
        <th>Actions</th>
        <th>
            Student ID
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fees)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a class="btn btn-warning" href="@Url.Action("Edit", "Student", new { studentId = item.StudentId })">
                    <i class="fa fa-pen"></i>
                </a>
                |
                <a class="btn btn-info" href="@Url.Action("Detail", "Student", new { studentId = item.StudentId })">
                    <i class="fa fa-eye"></i>
                </a>
                |
                <button type="button" class="btn btn-danger deleteStudentLink"
                        data-studentId="@item.StudentId" data-bs-toggle="modal" data-bs-target="#deleteStudentModal">
                    <i class="fa fa-trash"></i>
                </button>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fees)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
        </tr>
    }

</table>

<!-- Delete Modal -->
<div class="modal fade" id="deleteStudentModal" tabindex="-1" role="dialog" aria-labelledby="deleteStudentModal"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteStudentTitle">Delete Student</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete the Student with ID: <span id="deleteStudentId"></span>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-danger" onclick="deleteStudent()">Delete</button>
            </div>
        </div>
    </div>
</div>