@model Student
@{
    ViewBag.Title = "Edit";
}

<h2>Edit Student</h2>

@using (Html.BeginForm("EditStudent", "Student", new { studentId = Model.StudentId }, FormMethod.Post))
{
    @Html.AntiForgeryToken();

    <div class="form-group row">
        @Html.LabelFor(model => model.StudentId, "Student ID", new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.DisplayFor(model => model.StudentId)
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(model => model.Name, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.EditorFor(model => model.Name, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(model => model.City, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.EditorFor(model => model.City, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(model => model.Address, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.EditorFor(model => model.Address, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(model => model.Fees, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.EditorFor(model => model.Fees, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-8"></div>
        <div class="col-sm-4">
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
    </div>
}