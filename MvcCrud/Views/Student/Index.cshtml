@model IEnumerable<MvcCrud.Student>

@{
    ViewBag.Title = "Student List";
}

<h2>Student List</h2>

@Html.ActionLink(" ", "Create", null, new { @class = "btn btn-primary fa fa-plus" })

<table class="table">
    <tr>
        <th>Actions</th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fees)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a class="btn btn-warning" href="@Url.Action("Edit", "Student", new { studentId = item.StudentId })">
                    <i class="fa fa-pen"></i>
                </a>
                |
                <a class="btn btn-info" href="@Url.Action("Detail", "Student", new { studentId = item.StudentId })">
                    <i class="fa fa-eye"></i>
                </a>
                |
                <a class="btn btn-danger" href="@Url.Action("Delete", "Student", new { studentId = item.StudentId })">
                    <i class="fa fa-trash"></i>
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fees)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
        </tr>
    }

</table>
